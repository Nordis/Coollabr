@model CoolabrThird.Models.LogOnModel

@{
    ViewBag.Title = "Coollabr Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>RaccoonBlog :: Login</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>
<body id="login-bg">
	<div id="login-holder">
		<div id="logo-login">
		</div>
		<div class="clear">
		</div>
		<div id="loginbox">
			@if (ViewData.ModelState.IsValid == false)
   { 
				<div class="form-error">
					@Html.ValidationSummary(true)
				</div>
   }
			<article id="user-input" style="width: 350px">
				<form action="@Url.Action("Login")" method="post">
				<div style="width: 350px; height: 200px">
					<div style="float: left; padding-left: 17px; font-size: 16px" class="login-form">
						<div id="id-form" style="top: 0;">
							@Html.EditorFor(x => x.Login)
							@Html.EditorFor(x => x.Password)
							@Html.EditorFor(x => x.RememberMe)
							@Html.HiddenFor(x => x.ReturnUrl)
							<div style="float: right; width: 600px">
								<input style="width: 180px" type="submit" value="Login"></div>
						</div>
					</div>
				</div>
				</form>
				<div id="forgotbox">
					<div id="forgotbox-text">
						Please send us your email and we'll reset your password.</div>
					<div id="content-table-inner" class="inputform">
						<div id="id-form" style="top: 0;">
							@Html.EditorFor(x => x.Login)
							@Html.EditorFor(x => x.Password)
							<div>
								<input type="submit" value="Login"></div>
						</div>
					</div>
				</div>
			</article>
			<div class="clear">
				&nbsp;</div>
		</div>
	</div>
</body>
</html>
